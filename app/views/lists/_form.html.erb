<% if @list.errors.present? %>
  <ul>
    <% @list.errors.each do |error, message| %>
    <li>
      <%= "#{error.capitalize} #{message}" %>
    </li>
    <% end %>
  </ul>
<% end %>

<div class="form container">
  <%= form_for @list do |f| %>
    <div class="form-group">
      <%= f.label :task, "Task" %>
      <%= f.text_field :task, class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :due_date, "Due _Date" %>
      <%= f.text_field :due_date, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :note, "Note" %>
      <%= f.text_area :note, class: "form-control" %>
    </div>

    <%= f.submit %>

  <% end %>
</div>