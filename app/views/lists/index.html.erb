<table class="table table-striped table-condensed">
  <% @lists.each do |list| %>
    <tr>
      <td><%= check_box_tag(:task) %></td>
      <td><%= list.task %></td>
      <td><%= link_to 'Show', list_path(list) %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td>
      	<% if Date.today <= list.due_date %>
      		<%= link_to'Destroy', list_path(list), method: :delete, data:{confirm: "Are you sure?"} %></td>
      	<% end %>
    </tr>
  <% end %>
</table>

<%= link_to 'New Todo List', new_list_path %>